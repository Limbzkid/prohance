<div class="wrapper flex-wrp recpList">
	{% for item in content['#data_obj'] %}
		<div class="recipe-wrp" id="{{ item.nid }}">
			<a href="{{ item.path }}" class="recipe-link">
				<div class="recipe-img">
					<img src="{{ item.image }}" alt="recipe-product">
					<p>{{ item.title }}</p>
				</div>
			</a>
			<div class="level-wrp">
				<div class="serve-wrp flex-wrp">
					<p>Serves : <span>{{ item.servings }}</span></p>
					<p>Time : <span>{{ item.time }}</span></p>
				</div>
				<p>Difficulty Level : <span>{{ item.level }}</span></p>
			</div>
		</div>
	{% endfor %}
</div>
{% if content['#loadmore'] == 1 %}
	<div class="load-wrp">
		<input type="button" value="load more" class="recipes_loadmore">
	</div>
{% endif %}
